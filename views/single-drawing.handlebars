<div class="container">
  {{> post-info post}}
  {{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">Add Comment</button>
    </div>
  </form>
  {{/if}}
  <div style="display: block;">{{> comments post.comments}}</div>
  
</div>