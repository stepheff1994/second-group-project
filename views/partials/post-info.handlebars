<div class="col">
    <div class="card h-100 card-anim">
        <img src={{image}} class="card-img-top">
        <div class="card-body badge bg-light">
            <h5 class="card-title"> <a href="/drawing/{{id}}">{{title}}</a>
                (by <span class = "other-draws">{{user.username}}</span>)
            </h5>
            {{comments.length}} {{format_plural "comment" comments.length}}
        </div>
    </div>
</div>

{{#if loggedIn}}
<script src="/javascript/user-drawings.js"></script>
{{/if}}

