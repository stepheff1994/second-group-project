    <main>
        {{{body}}}
    </main>

    <footer class="footer rows pb-2 fixed-bottom">
        <div class="row-is-full content has-text-centered">
            <p>
                {{#if loggedIn}} |
                <a href="/my-canvas">My Canvas</a>

                {{else}}

                | <a href="/login">Login</a>
                {{/if}}
